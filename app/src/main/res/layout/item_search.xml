<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:textDirection="locale"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.v7.widget.CardView

        android:layout_marginTop="5dp"

        android:layoutDirection="locale"
        android:textDirection="locale"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_item"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
       <LinearLayout

           android:layoutDirection="locale"
           android:textDirection="locale"
           android:layout_margin="7dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_gravity="center"

               android:layout_weight="2"
               android:text="@string/sign_up_name"
               android:layoutDirection="locale"
               android:textDirection="locale"
               android:padding="1dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

           <TextView
               android:layout_gravity="center"

               android:layout_weight="1"
               android:text=""
               android:layoutDirection="locale"
               android:textDirection="locale"
               android:padding="1dp"
               android:id="@+id/text_item_search_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />


       </LinearLayout>
    <LinearLayout
        android:layout_margin="7dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="@string/sign_up_mobile"
            android:layoutDirection="locale"
            android:textDirection="locale"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

           <TextView
               android:layout_gravity="center"

               android:layout_weight="1"
               android:text=""
               android:layoutDirection="locale"
               android:textDirection="locale"
               android:padding="1dp"
               android:id="@+id/text_item_search_mobile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

    </LinearLayout>

          <LinearLayout
              android:layout_margin="5dp"

              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:text="@string/sign_up_age"
                  android:layout_gravity="center"

                  android:layout_weight="2"
                  android:layoutDirection="locale"
                  android:textDirection="locale"
                  android:layout_marginBottom="2dp"
                  android:padding="1dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
           <TextView
               android:layout_gravity="center"

               android:layout_weight="1"
               android:layoutDirection="locale"
               android:textDirection="locale"
               android:layout_marginBottom="2dp"
               android:padding="1dp"
               android:id="@+id/text_item_search_mobile2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
          </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"

                android:id="@+id/linear_show_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/show_address"
                    android:layout_gravity="center"

                    android:layout_weight="2"
                    android:layoutDirection="locale"
                    android:textDirection="locale"
                    android:layout_marginBottom="2dp"
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center"

                    android:layout_weight="1"
                    android:layoutDirection="locale"
                    android:textDirection="locale"
                    android:layout_marginBottom="2dp"
                    android:padding="1dp"
                    android:id="@+id/text_item_show_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <Button
                android:id="@+id/button_call"
                android:text="@string/call"
                android:drawableEnd="@android:drawable/sym_action_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:ignore="RtlCompat" />
       </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>